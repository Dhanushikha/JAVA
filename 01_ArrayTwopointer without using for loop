public class Main
{
	public static void main(String[] args) {
	    int arr[]={2,12,11,7,15};
	    int n = arr.length;
	    int target = 9;
	    int i=0;
	    int j = n-1;
	    while(i<j){
	   
	            if(arr[i]+arr[j]>target){
	                j--;
	                
	            }
	            if(arr[i]+arr[j]<target){
	                i++;
	            }
	            if(arr[i]+arr[j]==target){
	                System.out.println("["+i+","+j+"]");
	            }
	        }
	    
	
	}
}
